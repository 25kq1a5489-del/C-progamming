#include<stdio.h>
//function declaration 
int is prime(int num);
int main(){
int number;
printf("Enter a number:");
scanf("%d",&number);
if(is prime(number))
printf("%d is a prime number \n, number);
else
printf("%d is not a prime number \n",number);
return 0;
}
//function definition 
int is prime(int num){
if(num<=1)
return 0;//0 and 1 are not prime
for (int i=2;i<=num/2;i++){
if(num%i==0)
return 0;//not prime
}
return 1;//prime
}
